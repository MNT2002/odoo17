<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="confirm_state_benh_nhan_action" model="ir.actions.act_window">
            <field name="name">Xác nhận trạng thái bệnh nhân</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">confirm.state.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field> <!--Tạo pop up hiển thị lên (new - mặc định là current) -->
        </record>

        <record id="confirm_state_wizard_form_view" model="ir.ui.view">
            <field name="name">confirm_state_wizard_form_view</field>
            <field name="model">confirm.state.wizard</field>
            <field name="arch" type="xml">
                <form>
                    <group class="oe_title">
                        <field name="ghi_chu" />
                    </group>
                    <footer>
                        <button name="action_confirm" string="Xác nhận" type="object" class="btn-primary"/>
                        <button string="Huỷ" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>
    </data>
</odoo>