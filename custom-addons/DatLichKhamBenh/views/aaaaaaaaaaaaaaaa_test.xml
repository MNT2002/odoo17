<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="medical_bang_thong_tin_khoa_kanban_view" model="ir.ui.view">
        <field name="name">medical.khoa.kanban</field>
        <field name="model">medical.khoa</field>
        <field name="arch" type="xml">
            <kanban create="false" class="oe_background_grey o_kanban_dashboard o_account_kanban">
                <field name="id"/>
                <field name="name"/>
                <field name="institution"/>
                <field name="type"/>
                <field name="show_on_dashboard"/>
                <field name="kanban_dashboard"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="#{kanban_color(0)}">
                            <t t-value="JSON.parse(record.kanban_dashboard.raw_value)" t-set="z`"/>
                            <t t-call="OehTop"/>
                            <div class="o_kanban_card_content o_invisible" style="width:30%">
                                <div class="row">
                                    <t t-call="OehBodyDepartment"/>
                                </div>
                            </div>
                            <div class="o_kanban_card_manage_pane o_invisible" style="width:70%">
                                <t t-call="OehManage"/>
                            </div>
                            <!-- <t t-call="OehBodyGraph"/> -->
                        </div>
                    </t>
                    <t t-name="OehTop">
                        <div class="o_kanban_card_header">
                            <div class="o_kanban_card_header_title">
                                <div class="o_primary">
                                    <a type="object" name="open_action">
                                        <field name="name"/>
                                    </a>
                                </div>
                                <div class="o_secondary">
                                    <field name="institution"/>
                                </div>
                            </div>
                            <div class="o_kanban_manage_button_section">
                                <a class="o_kanban_manage_toggle_button" href="#">More <i class="fa fa-caret-down"/>
                                </a>
                            </div>
                        </div>
                    </t>
                    <t t-name="OehManage">
                        <div class="row" style="margin-left: -16px; margin-right: -16px">
                            <div class="col-4 o_kanban_card_manage_section o_kanban_manage_view">
                                <div class="o_kanban_card_manage_title">
                                    <span>View</span>
                                </div>
                                <t t-if="dashboard.type == 'Normal'">
                                    <div groups="biz_medical.group_medical_receptionist">
                                        <a type="object" name="action_view" context="{'check': 'register','action_name': 'biz_medical.action_medical_receiving_patients'}">Receiving patients</a>
                                    </div>
                                    <div groups="biz_medical.group_medical_physician,biz_medical.group_medical_manager,biz_medical.group_medical_center_admin">
                                        <a type="object" name="action_view" context="{'check': 'register','action_name': 'biz_medical.action_medical_register_for_walkin'}">Register for Walkins</a>
                                    </div>
                                    <div groups="biz_medical.group_medical_manager,biz_medical.group_medical_center_admin">
                                        <a type="object" name="action_view" context="{'check': 'prescriptions','action_name': 'biz_medical.action_prescription'}">Prescriptions Orders</a>
                                    </div>
                                </t>
                                <t t-if="dashboard.type == 'Normal' or dashboard.type == 'Labo  ratory'">
                                    <div groups="biz_medical.group_medical_physician,biz_medical.group_medical_manager,biz_medical.group_medical_center_admin">
                                        <a type="object" name="action_view" context="{'check': 'labtest','action_name': 'biz_medical.action_medical_lab_test_tree'}">Lab Tests</a>
                                    </div>
                                </t>
                                <t t-if="dashboard.type == 'Normal' or dashboard.type == 'Imaging'">
                                    <div groups="biz_medical.group_medical_physician,biz_medical.group_medical_manager,biz_medical.group_medical_center_admin">
                                        <a type="object" name="action_view" context="{'check': 'imaging','action_name': 'biz_medical.medical_imaging_test_action_tree'}">Imaging Tests</a>
                                    </div>
                                </t>
                            </div>

                            <div class="col-4 o_kanban_card_manage_section o_kanban_manage_new">
                                <div class="o_kanban_card_manage_title">
                                    <span>New</span>
                                </div>
                                <t t-if="dashboard.type == 'Normal'">
                                    <div groups="biz_medical.group_medical_receptionist">
                                        <a type="object" name="action_create_register_new">New Receiving Patient</a>
                                    </div>
                                    <div groups="biz_medical.group_medical_manager,biz_medical.group_medical_center_admin">
                                        <a type="object" name="action_create_prescriptions_new">Prescriptions Orders</a>
                                    </div>
                                </t>
                                <t t-if="dashboard.type == 'Normal' or dashboard.type == 'Laboratory'">
                                    <div groups="biz_medical.group_medical_physician,biz_medical.group_medical_manager,biz_medical.group_medical_center_admin">
                                        <a type="object" name="action_create_labtest_new">Lab Tests</a>
                                    </div>
                                </t>
                                <t t-if="dashboard.type == 'Normal' or dashboard.type == 'Imaging'">
                                    <div groups="biz_medical.group_medical_physician,biz_medical.group_medical_manager,biz_medical.group_medical_center_admin">
                                        <a type="object" name="action_create_imagingtest_new">Imaging Tests</a>
                                    </div>
                                </t>
                            </div>

                            <div class="col-4 o_kanban_card_manage_section o_kanban_manage_reconciliation">
                                <div class="o_kanban_card_manage_title">
                                    <span>Reports</span>
                                </div>
                                <t t-if="dashboard.type == 'Normal'">
                                    <div groups="biz_medical.group_medical_receptionist">
                                        <a type="action" name="698">Receiving patients</a>
                                    </div>
                                    <div groups="biz_medical.group_medical_physician,biz_medical.group_medical_manager,biz_medical.group_medical_center_admin">
                                        <a type="action" name="697">Register for Walkins</a>
                                    </div>
                                    <div groups="biz_medical.group_medical_manager,biz_medical.group_medical_center_admin">

                                        <a type="action" name="696">Prescriptions Orders</a>
                                    </div>
                                </t>
                                <t t-if="dashboard.type == 'Normal' or dashboard.type == 'Laboratory'">
                                    <div groups="biz_medical.group_medical_physician,biz_medical.group_medical_manager,biz_medical.group_medical_center_admin">
                                        <a type="action" name="695">Lab Tests</a>
                                    </div>
                                </t>
                                <t t-if="dashboard.type == 'Normal' or dashboard.type == 'Imaging'">
                                    <div groups="biz_medical.group_medical_physician,biz_medical.group_medical_manager,biz_medical.group_medical_center_admin">
                                        <a type="action" name="694">Imaging Tests</a>
                                    </div>
                                </t>
                            </div>
                        </div>

                        <div class="row o_kanban_card_settings" style="margin-left: -16px; margin-right: -16px">
                            <div class="col-6">
                                <a type="object" name="toggle_favorite">
                                    <i t-attf-class="fa o_dashboard_star #{record.show_on_dashboard.raw_value ? 'fa-star' : 'fa-star-o'}" title="Click to add/remove from favorite"/>
 Favorite</a>
                            </div>
                            <div class="col-6 text-right">
                                <a t-if="widget.editable" type="edit">Settings</a>
                            </div>
                        </div>
                    </t>
                    <t t-name="OehBodyDepartment">
                        <div class="o_kanban_primary_left" style="padding-right: 5px;">
                            <t t-if="dashboard.type == 'Normal'">
                                <button type="object" name="action_create_register_new" class="btn btn-primary btn-sm o_invoice_new">
                                    <span>New Receiving Patient</span>
                                </button>
                                <button type="object" name="action_create_prescriptions_new" class="btn btn-primary btn-sm o_invoice_new" groups="biz_medical.group_medical_manager,biz_medical.group_medical_center_admin">
                                    <span>New Prescriptions Orders</span>
                                </button>
                            </t>
                            <t t-if="dashboard.type == 'Normal' or dashboard.type == 'Laboratory'">
                                <button type="object" name="action_create_labtest_new" class="btn btn-primary btn-sm o_invoice_new" groups="biz_medical.group_medical_physician,biz_medical.group_medical_manager,biz_medical.group_medical_center_admin">
                                    <span>New Lab Tests</span>
                                </button>
                            </t>
                            <t t-if="dashboard.type == 'Normal' or dashboard.type == 'Imaging'">
                                <button type="object" name="action_create_imagingtest_new" class="btn btn-primary btn-sm o_invoice_new" groups="biz_medical.group_medical_physician,biz_medical.group_medical_manager,biz_medical.group_medical_center_admin">
                                    <span>New Imaging Tests</span>
                                </button>
                            </t>

                            <div class="invoices_validate">
                                <a type="object" name="open_action" context="{'search_default_paid': '1', 'search_default_status': 1}">
                                    <span title="Invoices to validate">
                                        <t t-esc="dashboard.number_paid"/>
 Invoices to validate
                                    </span>
                                </a>
                                <span>
                                    <t t-esc="dashboard.sum_paid"/>
                                </span>
                            </div>
                            <div class="awaiting_payments">
                                <a type="object" name="open_action" context="{'search_default_draft': '1', 'search_default_status': 1}">
                                    <span title="Awaiting payments">
                                        <t t-esc="dashboard.number_waiting"/>
  Awaiting payments
                                    </span>
                                </a>
                                <span>
                                    <t t-esc="dashboard.sum_waiting"/>
                                </span>
                            </div>
                        </div>
                    </t>
                    <t t-name="OehBodyGraph">
                        <div class="o_kanban_graph_section">
                            <field name="kanban_dashboard_graph" t-att-graph_type="'bar'" widget="dashboard_graph"/>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>
</odoo>