<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="homepage" name="Home">
        <t name="Homepage">
            <t t-call="website.layout">
                <div id="wrap" class="oe_structure oe_empty">
                    <section class="s_carousel_wrapper" data-vxml="001"
                        data-snippet="s_carousel"
                        data-name="Carousel">
                        <div class="s_carousel s_carousel_default carousel slide"
                            data-bs-interval="6000" id="myCarousel1711707571361"
                            style="background-image: none;">

                            <ol class="carousel-indicators o_we_no_overlay">
                                <li data-bs-slide-to="0"
                                    data-bs-target="#myCarousel1711707571361"
                                    class="active" />
                                <li data-bs-slide-to="1"
                                    data-bs-target="#myCarousel1711707571361"
                                    aria-current="true" />
                                <li data-bs-slide-to="2"
                                    data-bs-target="#myCarousel1711707571361" />
                            </ol>

                            <div class="carousel-inner">
                                <div
                                    class="carousel-item o_colored_level pb256 pt256 oe_img_bg o_bg_img_center active"
                                    style="background-image: url(&quot;/web/image/218-18454f8c/Banner-Kham-benh-hieu-qua-scaled.webp&quot;);"
                                    data-name="Slide" data-mimetype="image/webp"
                                    data-original-id="211"
                                    data-original-src="/web/image/211-cfb10c08/Banner-Kham-benh-hieu-qua-scaled.jpg"
                                    data-mimetype-before-conversion="image/jpeg"
                                    data-resize-width="1920">
                                    <div class="oe_unremovable container">

                                    </div>
                                </div>
                                <div
                                    class="carousel-item o_colored_level oe_img_bg o_bg_img_center pt88 pb256"
                                    style="background-image: url(&quot;/web/image/217-0e57f065/134537-group-12314.webp&quot;);"
                                    data-name="Slide" data-mimetype="image/webp"
                                    data-original-id="212"
                                    data-original-src="/web/image/212-26a6196a/134537-group-12314.png"
                                    data-mimetype-before-conversion="image/png"
                                    data-resize-width="1920">
                                    <div class="oe_unremovable container">

                                    </div>
                                </div>
                                <div
                                    class="carousel-item pt128 o_colored_level pb256 oe_img_bg o_bg_img_center"
                                    style="background-image: url(&quot;/web/image/216-ebfe2020/banner2.webp&quot;);"
                                    data-name="Slide" data-mimetype="image/webp"
                                    data-original-id="215"
                                    data-original-src="/web/image/215-8dd41d34/banner2.png"
                                    data-mimetype-before-conversion="image/png"
                                    data-resize-width="1600">
                                    <div class="container oe_unremovable">

                                    </div>
                                </div>
                            </div>

                            <a class="carousel-control-prev o_not_editable o_we_no_overlay"
                                data-bs-slide="prev" role="img" aria-label="Previous"
                                title="Previous" href="#myCarousel1711707571361">
                                <span class="carousel-control-prev-icon" />
                                <span class="visually-hidden o_default_snippet_text">Previous</span>
                            </a>
                            <a class="carousel-control-next o_not_editable o_we_no_overlay"
                                data-bs-slide="next" role="img" aria-label="Next" title="Next"
                                href="#myCarousel1711707571361">
                                <span class="carousel-control-next-icon" />
                                <span class="visually-hidden o_default_snippet_text">Next</span>
                            </a>
                        </div>
                    </section>
                </div>

                <div class="department">
                    <div id="exampleSlider">      <!-- Give wrapper ID to target with jQuery & CSS -->
                        <div class="MS-content">
                            <t t-foreach="departments" t-as="department">
                                <div class="img-customize item">
                                    <a t-attf-href="/department/{{ slug(department) }}">
                                        <div class='img-border'>
                                            <div class='outer-bg'>
                                                <div class="bg-image outstanding-doctor" t-attf-style="background-image: url('{{ 'data:image/png;base64,%s' % department.image.decode('utf-8') }}')">
                                                </div>
                                            </div>
                                            <div class="mt-3 text-center">
                                                <div>
                                                    <t t-esc="department.sudo().name" />
                                                </div>
                                            </div>
                                        </div>
                                    </a>
                                </div>
                            </t>
                        </div>
                        <div class="MS-controls">
                            <button class="MS-left">
                                <i class="fa fa-chevron-left" aria-hidden="true"></i>
                            </button>
                            <button class="MS-right">
                                <i class="fa fa-chevron-right" aria-hidden="true"></i>
                            </button>
                        </div>
                    </div>
                </div>
            </t>
        </t>
        <script type="text/javascript" src="/DatLichKhamBenh/static/src/js/carousel.js"></script>
        <script type="text/javascript" src="/DatLichKhamBenh/static/src/js/jquery-2.2.4.min.js"></script>
        <script type="text/javascript" src="/DatLichKhamBenh/static/src/js/multislider.min.js"></script>
        <script>
            $('#exampleSlider').multislider({
            interval:false,
            slideAll:false,
            });
        </script>
    </template>

    <template id="departments" name="Departments">
        <t t-call="website.layout">
            <title>Chuyên Khoa</title>
            <div class="oe_structure">
                <div class="container">
                    <t t-foreach="departments" t-as="department">
                        <p>
                            <a t-attf-href="/department/{{ slug(department) }}">
                                <t t-esc="department.sudo().name" />
                            </a>
                        </p>
                    </t>
                </div>
            </div>
        </t>
    </template>

    <template id="department_detail">
        <t t-call="website.layout">
            <title>Chi Tiết Chuyên Khoa</title>
            <div class="oe_structure">
                <div class="container">
                    <!-- t-field cho edit trên website -->
                    <h3 t-field="department.sudo().name" />
                    <li>
                        <t t-esc="department.sudo().type" />
                    </li>
                    <li>
                        <t t-esc="department.sudo().state" />
                    </li>
                </div>
            </div>
        </t>
    </template>
    <template id="portal_all_department" name="Portal my home: Departments"
        customize_show="True"
        inherit_id="portal.portal_my_home">
        <xpath expr="//div[hasclass('o_portal_docs')]" position="inside">
            <t t-if="quotation_count" t-call="portal.portal_docs_entry">
                <t t-set="title">Departments</t>
                <t t-set="url" t-value="'/department'" />
                <t t-set="count" t-value="count_departments" />
            </t>
        </xpath>

    </template>
</odoo>