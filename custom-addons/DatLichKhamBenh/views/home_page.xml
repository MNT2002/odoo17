                    </div>

                    <div class="multi_slider-container department">
                        <div class="container pl-0 pr-0 ">
                            <div class="section-header">
                                <span class="title-section">Chuyên khoa</span>
                                <button class="btn-section">Xem thêm</button>
                            </div>
                            <div id="ms1" class="multi_slider-box">                                <!-- Give wrapper ID to target with
                                jQuery & CSS -->
                                <div class="MS-content">
                                    <t t-foreach="departments" t-as="department">
                                        <div class="img-customize item">
                                            <a t-attf-href="/department/{{ slug(department) }}">
                                                <div class="img-border">
                                                    <div class="outer-bg">
                                                        <t t-if="department.image">
                                                            <div class="bg-image" t-attf-style="background-image: url('{{ 'data:image/png;base64,%s' % department.image.decode('utf-8') }}')">
                                                            </div>
                                                        </t>
                                                        <t t-else="">
                                                            <div class="bg-image" style="background-image: url('https://nhadepso.com/wp-content/uploads/2023/03/cap-nhat-50-hinh-anh-dai-dien-facebook-mac-dinh-dep-doc-la_2.jpg')">
                                                            </div>
                                                        </t>
                                                    </div>
                                                    <div class="mt-3 text-center content-box">
                                                        <div class="main-text">
                                                            <t t-esc="department.sudo().name"/>
                                                        </div>
                                                    </div>
                                                </div>
                                            </a>
                                        </div>
                                    </t>
                                </div>
                                <div class="MS-controls">
                                    <button class="MS-left">
                                        <i class="fa fa-chevron-left" aria-hidden="true"/>
                                    </button>
                                    <button class="MS-right">
                                        <i class="fa fa-chevron-right" aria-hidden="true"/>
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="multi_slider-container doctor">
                        <div class="container pl-0 pr-0">
                            <div class="section-header">
                                <span class="title-section">Bác sĩ nổi bật</span>
                                <button class="btn-section">Xem thêm</button>
                            </div>
                            <div id="ms2" class="multi_slider-box">                                <!-- Give wrapper ID to target with
                                jQuery & CSS -->
                                <div class="MS-content">
                                    <t t-foreach="doctors" t-as="doctor">
                                        <div class="img-customize item">
                                            <a t-attf-href="/doctor/{{ slug(doctor) }}">
                                                <div class="img-border">
                                                    <div class="outer-bg">
                                                        <t t-if="doctorScheduleTimes['doctor'].image">
                                                            <div class="bg-image" t-attf-style="background-image: url('{{ 'data:image/png;base64,%s' % doctorScheduleTimes['doctor'].image.decode('utf-8') }}')">
                                                            </div>
                                                        </t>
                                                        <t t-else="">
                                                            <div class="bg-image" style="background-image: url('https://nhadepso.com/wp-content/uploads/2023/03/cap-nhat-50-hinh-anh-dai-dien-facebook-mac-dinh-dep-doc-la_2.jpg')">
                                                            </div>
                                                        </t>
                                                    </div>
                                                    <div class="mt-3 text-center content-box">
                                                        <div class="main-text">
                                                            <t t-esc="doctorScheduleTimes['doctor'].sudo().name"/>
                                                        </div>
                                                        <div class="second-text">
                                                            <t t-esc="doctorScheduleTimes['doctor'].sudo().department_id.name"/>
                                                        </div>
                                                    </div>
                                                </div>
                                            </a>
                                        </div>
                                    </t>
                                </div>
                                <div class="MS-controls">
                                    <t t-if="len(doctors) &gt; 1">
                                        <button class="MS-left">
                                            <i class="fa fa-chevron-left" aria-hidden="true"/>
                                        </button>
                                        <button class="MS-right">
                                            <i class="fa fa-chevron-right" aria-hidden="true"/>
                                        </button>
                                    </t>
                                </div>
                            </div>
                        </div>
                    </div>
                </t>
            </t>
            <script type="text/javascript" src="/DatLichKhamBenh/static/src/js/carousel.js"/>
            <script type="text/javascript" src="/DatLichKhamBenh/static/src/js/jquery-2.2.4.min.js"/>
            <script type="text/javascript" src="/DatLichKhamBenh/static/src/js/multislider.min.js"/>
            <script>
                $('#ms1').multislider({
                interval:false,
                slideAll:false,
                });
                $('#ms2').multislider({
                interval:false,
                slideAll:false,
                });
            </script>
        </t>
    </template>

    <template id="reload_schedule_times_department">
        <t t-foreach="doctorScheduleTimes['schedule_times']" t-as="schedule_time">
            <button>
                <t t-esc="schedule_time.name" />
            </button>
        </t>
    </template>
    <template id="department_detail">
        <t t-call="website.layout">
            <title>Chi Tiết Chuyên Khoa</title>
            <div class="wraper">
                <div class="container">
                    <div class="department_extra-infor pt-2 pb-2">
                        <h1 class="title m-auto m-md-0 pt-2">
                            <t t-esc="department.sudo().name" />
                        </h1>
                        <div class="content">
                            <t t-raw="department.sudo().extra_infor" />
                        </div>
                        <span class="more-infor_btn">Xem thêm</span>
                    </div>

                    <t t-foreach="arrDoctorScheduleTimes" t-as="doctorScheduleTimes">
                        <div class='each-doctor'>
                            <div class='dt-content-left'>
                                <div class='profile-doctor'>
                                    <div class='intro-doctor'>
                                        <t t-if="doctorScheduleTimes['doctor'].image">
                                            <div class='content-left' t-attf-style="background-image: url('{{ 'data:image/png;base64,%s' % doctorScheduleTimes['doctor'].image.decode('utf-8') }}')">
                                                <div class='show-more'>
                                                    <a t-attf-href="/doctor/{{ slug(doctorScheduleTimes['doctor']) }}">
                                                        Xem thêm
                                                    </a>
                                                </div>
                                            </div>
                                        </t>
                                        <t t-else="">
                                            <div class='content-left' style="background-image: url('https://nhadepso.com/wp-content/uploads/2023/03/cap-nhat-50-hinh-anh-dai-dien-facebook-mac-dinh-dep-doc-la_2.jpg')">
                                                <div class='show-more'>
                                                    <a t-attf-href="/doctor/{{ slug(doctorScheduleTimes['doctor']) }}">
                                                        Xem thêm
                                                    </a>
                                                </div>
                                            </div>
                                        </t>
                                        <div class='content-right'>
                                            <div class='up'>
                                                <t t-esc="doctorScheduleTimes['doctor'].sudo().name" />
                                            </div>
                                            <div class='down'>
                                                <span>
                                                    <t t-raw="doctorScheduleTimes['doctor'].sudo().description" />
                                                </span>

                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class='dt-content-right'>
                                <div class='doctor-schedule'>
                                    <div class='doctor-schedule-container'>
                                        <div class='all-schedule'>
                                            <select class="schedule_date" t-att-data-doctorId="doctorScheduleTimes['doctor'].id">
                                                <t t-foreach="doctorScheduleTimes['doctor'].examination_schedule_ids" t-as="examination_schedule_id">
                                                    <option t-value="examination_schedule_id.id">
                                                        <t t-esc="examination_schedule_id.name" />
                                                    </option>
                                                </t>
                                            </select>
                                        </div>
                                        <div class='all-available-time'>
                                            <div class='title-calendar'>
                                                <i class='fas fa-calendar-alt'></i>
                                                <span>Lịch khám</span>
                                            </div>
                                            <div class='time-content' id="">
                                                <div class='time-content-btn-box' t-att-id="doctorScheduleTimes['doctor'].id">
                                                   <t t-call="DatLichKhamBenh.reload_schedule_times_department"/>
                                                </div>
                                                <div class='book-free'>
                                                    <span> Chọn <i class='far fa-hand-point-up'></i>
                                                        và đặt miễn phí </span>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class='doctor-extraInfor'>
                                    <div class='doctor-extra-infor-container'>
                                        <div class='content-up'>
                                            <div class='text-address'>
                                                Địa chỉ khám
                                            </div>
                                            <t t-if="doctor">
                                                <div class='clinic-name'>
                                                    <t t-esc="doctorScheduleTimes['doctor'].sudo().health_center_id.name" />
                                                </div>
                                                <div class='detail-address'>
                                                    <t t-esc="doctorScheduleTimes['doctor'].sudo().health_center_id.street" />
,
                                                    <t t-esc="doctorScheduleTimes['doctor'].sudo().health_center_id.city" />
,
                                                    <t t-esc="doctorScheduleTimes['doctor'].sudo().health_center_id.state_id_new.name" />
,
                                                    <t t-esc="doctorScheduleTimes['doctor'].sudo().health_center_id.country_id_new.name" />
                                                </div>
                                            </t>
                                            <t t-else="">
                                                <div class='clinic-name'>
                                                </div>
                                                <div class='detail-address'>
                                                </div>
                                            </t>

                                        </div>
                                        <div class='content-down'>
                                            <div>
                                                <span class='price-title'>
                                                    Giá khám
                                                </span>
                                                <span class='price-number'>
                                                    <t t-esc="doctorScheduleTimes['doctor'].sudo().consultancy_price" />
                                                    VNĐ 
                                                </span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </div>
            </div>
        </t>
        <script>
            
        </script>
        <script type="text/javascript" src="/DatLichKhamBenh/static/src/js/main.js"/>
    </template>
    
    <template id="reload_schedule_times">
        <t t-foreach="schedule_times" t-as="schedule_time">
            <button>
                <t t-esc="schedule_time.name" />
            </button>
        </t>
    </template>
    <template id="doctor_detail">
        <t t-call="website.layout">
            <title>Chi Tiết Bác sĩ</title>
            <div class="wraper">
                <div class='doctor-detail-container'>
                    <div class='intro-doctor'>
                        <t t-if="doctor and doctor.image">
                            <div class='content-left' t-attf-style="background-image: url('{{ 'data:image/png;base64,%s' % doctor.image.decode('utf-8') }}')"></div>
                        </t>
                        <t t-else="">
                            <div class='content-left' style="background-image: url('https://nhadepso.com/wp-content/uploads/2023/03/cap-nhat-50-hinh-anh-dai-dien-facebook-mac-dinh-dep-doc-la_2.jpg')"></div>
                        </t>
                        <div class="content-right">
                            <div class='up'>
                                <t t-esc="doctor.sudo().name"/>
                            </div>
                            <div class='down'>
                                <span>
                                    <t t-raw="doctor.sudo().description"/>
                                </span>
                                <div class='like-share-plugin'>

                                </div>
                            </div>
                        </div>
                    </div>
                    <div class='schedule-doctor'>
                        <div class='content-left'>
                            <div class='doctor-schedule'>
                                <div class='doctor-schedule-container'>
                                    <div class='all-schedule'>
                                        <select id="schedule_date" t-att-data-doctorId="doctor.id">
                                            <t t-foreach="doctor.examination_schedule_ids" t-as="examination_schedule_id">
                                                <option t-value="examination_schedule_id.id">
                                                    <t t-esc="examination_schedule_id.name" />
                                                </option>
                                            </t>
                                        </select>
                                    </div>
                                    <div class='all-available-time'>
