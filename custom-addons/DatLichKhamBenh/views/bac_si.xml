<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_res_users_inherit" model="ir.ui.view">
        <field name="name">Res Users Inherit</field>
        <field name="model">res.users</field>
        <field name="inherit_id" ref="base.view_users_form"/>
        <field name="arch" type="xml">
            <xpath expr="// field[@name='action_id']" position="after">
                <field name="_is_invisible" invisible="True"/>
                <field name="bac_si_ids" widget="many2many_tags" invisible="_is_invisible == True"/>
            </xpath>
        </field>
    </record>

    <!--===== Bác sĩ =====  -->
    <!-- Bac si form view-->
    <record id="medical_bac_si_view_form" model="ir.ui.view">
        <field name="name">medical.bac_si.form</field>
        <field name="model">medical.bac_si</field>
        <field name="arch" type="xml">
            <form string="Bác sĩ">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button type="action" class="oe_stat_button" name="DatLichKhamBenh.morden_action_medical_phieu_kham_benh" groups="DatLichKhamBenh.group_employee_manager,DatLichKhamBenh.group_employee_user,DatLichKhamBenh.group_employee_doctor" icon="fa-list" context="{'default_bac_si_id': active_id, 'default_trung_tam_y_te_id': trung_tam_y_te_id, 'default_khoa_id': khoa_id}">
                            <field string="Phiếu khám bệnh" name="phieu_kham_benh_count" widget="statinfo"/>
                        </button>
                        <button type="action" class="oe_stat_button" name="DatLichKhamBenh.medical_don_thuoc_action" groups="DatLichKhamBenh.group_employee_manager,DatLichKhamBenh.group_employee_user,DatLichKhamBenh.group_employee_doctor" icon="fa-list" context="{'default_bac_si_id': active_id, 'default_trung_tam_y_te_id': trung_tam_y_te_id, 'default_khoa_id': khoa_id}">
                            <field string="Đơn thuốc" name="don_thuoc_count" widget="statinfo"/>
                        </button>
                    </div>
                    <field name="anh_dai_dien" nolabel="1" widget="image" class="oe_avatar" />
                    <div class="oe_title">
                        <label for="name" />
                        <h1>
                            <field name="name" required="1" />
                        </h1>
                        <div class="o_row">
                            <field name="chuyen_mon" placeholder="Chuyên môn" />
                        </div>
                    </div>
                    <group>
                        <group>
                            <field name="trinhdo_bangcap" widget="many2many_tags" placeholder="Bằng cấp ..." />
                            <field name="duoc_si" />
                            <field name="y_ta" />
                            <field name="dieu_duong" />
                        </group>
                        <group>
                            <field name="phi_kham_benh" />
                            <field name="id_giay_phep" />
                            <field name="trung_tam_y_te_id" required="True" widget="many2one_tags"/>
                            <field name="khoa_id" />
                        </group>
                    </group>
                    <notebook>
                        <page string="Chung">
                            <group string="Thông tin liên lạc">
                                <group>
                                    <label for="dia_chi" string="Địa chỉ"/>
                                    <div>
                                        <field name="dia_chi" placeholder="Street..." on_change="1" field_id="street_0"/>
                                        <field name="dia_chi_2" on_change="1" field_id="street2_0"/>
                                        <field name="country_id_new" placeholder="Quốc gia" class="oe_no_button" options="{&quot;no_open&quot;: True, &quot;no_create&quot;: True}" on_change="1" can_create="True" can_write="True" field_id="country_id_0"/>
                                        <div class="address_format">
                                            <field name="state_id_new" class="oe_no_button" placeholder="Tỉnh/Thành phố " required='country_id_new != False' style="width: 37%" options="{&quot;no_open&quot;: True}" on_change="onchange_state(state_id)" can_create="True" can_write="True" field_id="state_id_0"/>
                                            <field name="thanh_pho" placeholder="Thành phố" style="width: 40%" on_change="1" field_id="city_0"/>
                                            <field name="zip" placeholder="Mã bưu điện" style="width: 20%" on_change="1" field_id="zip_0"/>
                                        </div>
                                        <div class="address_format">
                                            <field name="phuong_xa" placeholder="Phường/Xã" style="width: 49%" can_create="True" can_write="True" field_id="wards_id_0"/>
                                            <field name="quan_huyen" class="oe_no_button" placeholder="Quận/Huyện" style="width: 49%" field_id="district_id_0"/>
                                        </div>
                                    </div>
                                </group>
                                <group>
                                    <field name="so_dien_thoai" />
                                    <field name="email" />
                                    <field name="so_dien_thoai_van_phong" />
                                </group>
                            </group>
                        </page>
                        <page string="Lịch trống hàng tuần">
                            <field name="examination_schedule_ids" context="{'default_doctor_id': active_id}" />
                        </page>
                        <page string="Thông tin thêm">
                            <div class="o_row">
                                <field name="thong_tin_them" />
                            </div>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Bac si kanban view-->
    <record id="medical_bac_si_kanban_view" model="ir.ui.view">
        <field name="name">medical.bac_si.kanban</field>
        <field name="model">medical.bac_si</field>
        <field name="arch" type="xml">
            <kanban>
                <field name="name" />
                <field name="anh_dai_dien" />
                <field name="trinhdo_bangcap" />
                <field name="chuyen_mon" />
                <field name="id_giay_phep" />
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click o_kanban_record_has_image_fill">
                            <div class="oe_kanban_details">
                                <a type="open">
                                    <img widget="image" heigh="100" width="100" t-att-alt="record.id.value" t-att-src="kanban_image('medical.bac_si', 'anh_dai_dien', record.id.raw_value)" />
                                </a>
                            </div>
                            <div class="oe_kanban_details" style="text-align: left">
                                <h4>
                                    <a type="open">
                                        <field name="name" />
                                    </a>
                                </h4>
                                <ul>
                                    <li>
                                        <field name="trinhdo_bangcap" widget="many2many_tags" />
                                    </li>
                                    <li>
                                        <field name="chuyen_mon" />
                                    </li>
                                    <li>
                                        <field name="id_giay_phep" />
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>
    <!--  Bac si search view  -->
    <record id="bac_si_search_view" model="ir.ui.view">
        <field name="name">Bác sĩ</field>
        <field name="model">medical.bac_si</field>
        <field name="arch" type="xml">
            <search string="Bác sĩ">
                <separator />
                <group expand="0" string="Nhóm theo">
                    <filter string="Tên" name="group_by_name" context="{'group_by': 'name'}"/>
                    <filter string="ID giáy phép" name="group_by_id_giay_phep" context="{'group_by': 'id_giay_phep'}"/>
                    <filter string="Chuyên khoa" name="group_by_chuyen_mon" context="{'group_by': 'chuyen_mon'}"/>
                </group>
            </search>
        </field>
    </record>
    <!-- Bac si tree view-->
    <record id="medical_bac_si_tree_view" model="ir.ui.view">
        <field name="name">medical.bac_si.tree</field>
        <field name="model">medical.bac_si</field>
        <field name="arch" type="xml">
            <tree string="Thông tin bệnh nhân">
                <field name="name" />
                <field name="id_giay_phep" />
                <field name="chuyen_mon" />
                <field name="khoa_id" />
                <field name="trung_tam_y_te_id" />
            </tree>
        </field>
    </record>
    <!-- Bac si action-->
    <record id="medical_bac_si_action" model="ir.actions.act_window">
        <field name="name">Bác sĩ</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">medical.bac_si</field>
        <field name="view_mode">kanban,tree,form</field>
        <!-- <field name="domain">[('res_users_id', '!=', None)]</field> -->
        <!-- <field name="domain"></field> -->
    </record>

    
