<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!--Khai bao danh muc phan quyen-->
        <record model="ir.module.category" id="medical_category">
            <field name="name">Medical</field>
            <field name="sequence">1</field>
        </record>

        <!--Khai bao nhom quyen-->
        <record id="group_employee_user" model="res.groups">
            <field name="name">Employee user</field>
            <field name="category_id" ref="DatLichKhamBenh.medical_category"/>
        </record>
