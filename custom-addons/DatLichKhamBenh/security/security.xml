<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!--Khai bao danh muc phan quyen-->
        <record model="ir.module.category" id="medical_category">
            <field name="name">Medical</field>
            <field name="sequence">10</field>
        </record>

        <!--Khai bao nhom quyen-->
        <record id="group_employee_user" model="res.groups">
            <field name="name">Employee user</field>
            <field name="category_id" ref="DatLichKhamBenh.medical_category"/>
            <!-- <field name="implied_ids" eval="[(4, ref('base.user_root'))]"/> -->
        </record>
        <!--Khai bao nhom quyen-->
        <record id="group_employee_doctor" model="res.groups">
            <field name="name">Doctor</field>
            <field name="category_id" ref="DatLichKhamBenh.medical_category"/>
            <field name="implied_ids" eval="[(4, ref('base.user_root'))]"/>
        </record>

        <!--Khai bao nhom quyen-->
        <record id="group_employee_manager" model="res.groups">
            <field name="name">Employee Manager</field>
            <field name="category_id" ref="DatLichKhamBenh.medical_category"/>
            <!-- Xac dinh nhom duoc ke thua quyen tu nhom nao -->
            <field name="implied_ids" eval="[(4, ref('DatLichKhamBenh.group_employee_user'))]"/>
        </record>

        <record id="owner_doctor_rule" model="ir.rule">
            <field name="name">Owner Doctor Rule</field>
            <field name="model_id" ref="DatLichKhamBenh.model_medical_doctor"/>
            <field name="domain_force">[('res_users_id', '=', user.id )]</field>
            <field name="perm_write" eval="1"/>
            <field name="perm_create" eval="1"/>
            <field name="perm_read" eval="1"/>
            <field name="perm_unlink" eval="1"/>
            <field name="groups" eval="[(4, ref('DatLichKhamBenh.group_employee_doctor'))]"/>
        </record>
        <record id="owner_manager_rule" model="ir.rule">
            <field name="name">Owner Doctor Rule</field>
            <field name="model_id" ref="DatLichKhamBenh.model_medical_doctor"/>
            <field name="domain_force">[(1 ,'=', 1 )]</field>
            <field name="perm_write" eval="1"/>
            <field name="perm_create" eval="1"/>
            <field name="perm_read" eval="1"/>
            <field name="perm_unlink" eval="1"/>
            <field name="groups" eval="[(4, ref('DatLichKhamBenh.group_employee_manager'))]"/>
        </record>

