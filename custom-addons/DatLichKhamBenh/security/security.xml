<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!--Khai  bao danh muc phan quyen-->
        <record model="ir.module.category" id="patient_category">
            <field name="name">Employees</field>
            <field name="sequence">1</field>
        </record>

        <!--Khai  bao nhom quyen-->
        <record id="group_employee_user" model="res.groups">
            <field name="name">Employee user</field>
            <field name="category_id" ref="DatLichKhamBenh.patient_category"/>
        </record>

        <!--Khai  bao nhom quyen-->
        <record id="group_employee_manager" model="res.groups">
            <field name="name">Employee Manager</field>
            <field name="category_id" ref="DatLichKhamBenh.patient_category"/>
            <!-- Xac dinh nhom duoc ke thua quyen tu nhom nao -->
            <field name="implied_ids" eval="[(4, ref('DatLichKhamBenh.group_employee_user'))]"/>
        </record>

        <record id="owner_employee_rule" model="ir.rule">
            <field name="name">Owner Employee Rule</field>
            <field name="model_id" ref="DatLichKhamBenh.model_medical_benh_nhan"/>
            <field name="domain_force">[('create_uid', '=', user.id )]</field>
            <field name="perm_write" eval="1"/>
            <field name="perm_create" eval="1"/>
            <field name="perm_read" eval="1"/>
            <field name="perm_unlink" eval="1"/>
            <!-- You can attach this rule to a specific group, Or make it Global -->
            <field name="groups" eval="[(4, ref('DatLichKhamBenh.group_employee_user'))]"/>
            <!--<field name="global" eval="1"/> -->
        </record>
        <record id="all_employee_rule" model="ir.rule">
            <field name="name">All Employee Rule</field>
            <field ref="DatLichKhamBenh.model_medical_benh_nhan" name="model_id"/>
            <field name="domain_force">[(1, '=', 1 )]</field>
            <field name="perm_write" eval="1"/>
            <field name="perm_create" eval="1"/>
            <field name="perm_read" eval="1"/>
            <field name="perm_unlink" eval="1"/>
            <!-- You can attach this rule to a specific group, Or make it Global -->
            <field name="groups" eval="[(4, ref('DatLichKhamBenh.group_employee_manager'))]"/>
            <!--<field name="global" eval="1"/> -->
        </record>

    </data>
</odoo>